{
  "name": "sys-mon",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start:sysmon": "ng serve sysmon --port 4202",
    "build:sysmon": "ng build sysmon --prod",
    "build": "npm run build:sysmon",
    "test": "npm run test:sysmon && npm run test:shared",
    "test:sysmon": "ng test sysmon --progress=false --code-coverage --browsers=ChromeHeadless --watch=false",
    "test:shared": "ng test shared --progress=false  --code-coverage --browsers=ChromeHeadless --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e sysmon-e2e",
    "precommit": "lint-staged",
    "format": "prettier --write \"projects/**/*.{js,ts,json,scss}\"",
    "i18n": "npm run extract-i18n-template && npm run extract-i18n-ts && npm run xliffmerge",
    "extract-i18n-template": "ng xi18n --output-path=locale",
    "extract-i18n-ts": "ngx-extractor -i \"projects/**/*.ts\" -f xlf -o projects/sysmon/locale/messages.xlf",
    "xliffmerge": "xliffmerge --profile xliffmerge.json en"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/cdk": "^7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/flex-layout": "^7.0.0-beta.22",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@ngx-translate/i18n-polyfill": "^1.0.0",
    "@types/googlemaps": "^3.38.0",
    "angulartics": "^1.6.0",
    "angulartics2": "^7.5.2",
    "core-js": "^2.5.4",
    "ngx-pipes": "~2.6.0",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.0",
    "@angular-devkit/build-ng-packagr": "~0.11.4",
    "@angular/cli": "~7.2.1",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@pact-foundation/karma-pact": "^2.1.9",
    "@pact-foundation/pact": "^7.2.0",
    "@pact-foundation/pact-node": "^6.20.0",
    "@pact-foundation/pact-web": "^7.2.0",
    "@types/jasmine": "~3.3.4",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-scss-preprocessor": "^4.0.0",
    "ng-packagr": "^4.2.0",
    "ngx-i18nsupport": "^0.17.1",
    "prettier": "1.16.1",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "tslint-defocus": "^2.0.6",
    "typescript": "~3.2.2"
  },
  "lint-staged": {
    "*.{js,ts,json,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true
  }
}
